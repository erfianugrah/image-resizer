{
  "name": "image-resizer",
  "version": "2.0.0",
  "description": "Cloudflare Worker for image resizing with DDD and service architecture",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy:prod": "wrangler deploy --env prod",
    "deploy:dev": "wrangler deploy --env dev",
    "deploy:staging": "wrangler deploy --env staging",
    "format": "prettier --write '**/*.{js,ts,css,json,md}'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "build": "wrangler publish --dry-run",
    "prepare": "tsc --noEmit && eslint .",
    "config": "ts-node src/tools/config-cli.ts",
    "config:list": "ts-node src/tools/config-cli.ts list-templates",
    "config:create": "ts-node src/tools/config-cli.ts create",
    "config:validate": "ts-node src/tools/config-cli.ts validate ./wrangler.jsonc",
    "config:convert": "ts-node src/tools/config-cli.ts convert",
    "config:migrate": "ts-node src/tools/config-cli.ts migrate",
    "config:validate:ci": "ts-node src/tools/config-cli.ts validate ./wrangler.jsonc --format github --exit-code",
    "config:validate:all": "ts-node src/tools/config-cli.ts validate ./wrangler.jsonc --format json"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "image",
    "resizing",
    "domain-driven-design",
    "service-architecture",
    "typescript",
    "command-pattern"
  ],
  "author": "Erfi Anugrah",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240508.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.17.24",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitest/coverage-v8": "^3.0.8",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "inquirer": "^8.2.6",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^3.0.8",
    "wrangler": "^4.0.0",
    "yaml": "^2.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ]
}
